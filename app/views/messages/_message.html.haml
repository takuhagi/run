.message__box{data: {message: {id: message.id}}}
  .message_info
    .message_info__user__name
      = message.user.name
    .message_info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message
    - if message.content.present?
      %p.message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?